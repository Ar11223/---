.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
  box-sizing: border-box;
}

.form-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.required::before {
  content: '*';
  color: #ff4d4f;
  margin-right: 8rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.placeholder {
  color: #999;
}

.picker {
  width: 100%;
  height: 88rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}

.selected {
  color: #333;
}

.location-input {
  position: relative;
}

.location-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
}

.number-input {
  display: flex;
  align-items: center;
  width: 100%;
  height: 88rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  overflow: hidden;
}

.number-btn {
  width: 88rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #333;
  background-color: #f0f0f0;
}

.number {
  flex: 1;
  height: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  background-color: #f8f8f8;
}

.time-range {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.time-picker {
  flex: 1;
  height: 88rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.separator {
  margin: 0 20rpx;
  color: #999;
}

.options-container {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
}

.option-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.option-item:last-child {
  margin-bottom: 0;
}

.option-input {
  flex: 1;
  height: 72rpx;
  background-color: #ffffff;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.delete-icon {
  width: 40rpx;
  height: 40rpx;
}

.add-option {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 72rpx;
  background-color: #ffffff;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.add-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.textarea {
  width: 100%;
  height: 200rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.submit-section {
  padding: 0 30rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #1296db;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn.disabled {
  background-color: #cccccc;
} 