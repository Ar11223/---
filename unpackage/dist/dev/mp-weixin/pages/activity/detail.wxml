<view class="container"><view class="activity-header"><text class="activity-name">{{activity.name}}</text><text class="{{['activity-status',activity.status]}}">{{activity.status==='ongoing'?'进行中':'已结束'}}</text></view><view class="info-section"><view class="info-item"><text class="label">活动时间</text><text class="value">{{activity.time}}</text></view><view class="info-item"><text class="label">活动地点</text><text class="value">{{activity.location}}</text></view><view class="info-item"><text class="label">参与人数</text><text class="value">{{$root.g0+"/"+activity.maxParticipants}}</text></view><view class="info-item"><text class="label">抽签时间</text><text class="value">{{activity.startTime+" - "+activity.endTime}}</text></view></view><view class="description-section"><text class="section-title">活动描述</text><text class="description">{{activity.description||'暂无描述'}}</text></view><view class="options-section"><text class="section-title">抽签选项</text><view class="options-list"><block wx:for="{{activity.options}}" wx:for-item="option" wx:for-index="index" wx:key="index"><view class="option-item"><text class="option-text">{{option}}</text></view></block></view></view><view class="action-section"><button class="action-btn join-btn" disabled="{{!canJoin}}" data-event-opts="{{[['tap',[['goToJoin',['$event']]]]]}}" bindtap="__e">{{''+joinButtonText+''}}</button><button data-event-opts="{{[['tap',[['showShareOptions',['$event']]]]]}}" class="action-btn share-btn" bindtap="__e">分享活动</button></view><block wx:if="{{showShare}}"><view class="share-popup"><view class="share-content"><view class="share-title">分享活动</view><view class="share-options"><view data-event-opts="{{[['tap',[['shareByQRCode',['$event']]]]]}}" class="share-option" bindtap="__e"><image src="/static/images/qrcode.png" mode="aspectFit"></image><text>二维码分享</text></view><view data-event-opts="{{[['tap',[['shareByLink',['$event']]]]]}}" class="share-option" bindtap="__e"><image src="/static/images/link.png" mode="aspectFit"></image><text>链接分享</text></view></view><button data-event-opts="{{[['tap',[['hideShare',['$event']]]]]}}" class="close-btn" bindtap="__e">关闭</button></view></view></block></view>