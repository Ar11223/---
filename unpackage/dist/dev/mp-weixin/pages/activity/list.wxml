<view class="container"><view class="filter-bar"><view data-event-opts="{{[['tap',[['changeFilter',['all']]]]]}}" class="{{['filter-item',(currentFilter==='all')?'active':'']}}" bindtap="__e">全部</view><view data-event-opts="{{[['tap',[['changeFilter',['ongoing']]]]]}}" class="{{['filter-item',(currentFilter==='ongoing')?'active':'']}}" bindtap="__e">进行中</view><view data-event-opts="{{[['tap',[['changeFilter',['ended']]]]]}}" class="{{['filter-item',(currentFilter==='ended')?'active':'']}}" bindtap="__e">已结束</view></view><view class="activity-list"><block wx:for="{{filteredList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['goToDetail',['$0'],[[['filteredList','',index]]]]]]]}}" class="activity-card" bindtap="__e"><view class="activity-info"><text class="activity-name">{{item.name}}</text><text class="activity-time">{{item.time}}</text><text class="activity-location">{{item.location}}</text></view><view class="activity-status"><text class="{{['status-tag',item.status]}}">{{item.statusText}}</text></view></view></block></view><block wx:if="{{$root.g0===0}}"><view class="empty-state"><image src="/static/images/empty.png" mode="aspectFit"></image><text>暂无活动</text></view></block><view data-event-opts="{{[['tap',[['goToCreate',['$event']]]]]}}" class="create-btn" bindtap="__e"><text class="create-icon">+</text></view></view>