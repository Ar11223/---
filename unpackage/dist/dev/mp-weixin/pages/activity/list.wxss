.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}
.filter-bar {
  display: flex;
  background-color: #ffffff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.filter-bar .filter-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0;
  position: relative;
}
.filter-bar .filter-item.active {
  color: #007AFF;
}
.filter-bar .filter-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #007AFF;
  border-radius: 2rpx;
}
.activity-list {
  padding: 20rpx;
}
.activity-list .activity-card {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.activity-list .activity-card .activity-info {
  margin-bottom: 20rpx;
}
.activity-list .activity-card .activity-info .activity-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}
.activity-list .activity-card .activity-info .activity-time {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}
.activity-list .activity-card .activity-info .activity-location {
  font-size: 24rpx;
  color: #666;
  display: block;
}
.activity-list .activity-card .activity-status .status-tag {
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}
.activity-list .activity-card .activity-status .status-tag.ongoing {
  background-color: #e6f3ff;
  color: #007AFF;
}
.activity-list .activity-card .activity-status .status-tag.ended {
  background-color: #f5f5f5;
  color: #999;
}
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.empty-state text {
  font-size: 28rpx;
  color: #999;
}
.create-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #007AFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
}
.create-icon {
  color: #ffffff;
  font-size: 48rpx;
  font-weight: bold;
}
