.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}
.status-bar {
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}
.status-bar .user-info {
  display: flex;
  align-items: center;
}
.status-bar .user-info .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.status-bar .user-info .nickname {
  font-size: 28rpx;
  color: #333;
}
.quick-actions {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.quick-actions .action-card {
  background-color: #ffffff;
  width: 30%;
  height: 160rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.quick-actions .action-card .iconfont {
  font-size: 40rpx;
  color: #007AFF;
  margin-bottom: 10rpx;
}
.quick-actions .action-card text {
  font-size: 24rpx;
  color: #666;
}
.activity-list {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
}
.activity-list .section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.activity-list .section-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.activity-list .section-title .more {
  font-size: 24rpx;
  color: #007AFF;
}
.activity-list .activity-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.activity-list .activity-card .activity-info .activity-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}
.activity-list .activity-card .activity-info .activity-time {
  font-size: 24rpx;
  color: #999;
}
.activity-list .activity-card .activity-status .status-tag {
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}
.activity-list .activity-card .activity-status .status-tag.ongoing {
  background-color: #e6f3ff;
  color: #007AFF;
}
.activity-list .activity-card .activity-status .status-tag.ended {
  background-color: #f5f5f5;
  color: #999;
}
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.empty-state text {
  font-size: 28rpx;
  color: #999;
}
